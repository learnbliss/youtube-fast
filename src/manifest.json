{
  "name": "__MSG_name__",
  "description": "__MSG_description__",
  "version": "0.1.0",
  "manifest_version": 3,
  "default_locale": "ru",
  "icons": {
    "32": "./icons/y_icon_32.png",
    "64": "./icons/y_icon_64.png",
    "128": "./icons/y_icon_128.png"
  },
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://m.youtube.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "scripting"
  ],
  "action": {
    "default_title": "YouTube Speed Changer",
    "default_popup": "badge/popup.html"
  }
}
